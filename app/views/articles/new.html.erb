<% if @article.errors.any?%>
  <h2> Error: </h2>
  <ul>
    <% @article.errors.full_messages.each do |message| %>
  
    <li><%= message%></li>
  <%end%>
  </ul>
<%end%>

<h1>Create a new article</h1>

<%= form_with scope: :article,data: { turbo: false }, url: articles_path, local: true do |f|%>
  <p>
    <%= f.label :title %>
    <%= f.text_field :title%>
  </p>

  <p>
    <%= f.label :description%>
    <%= f.text_area :description%>
  </p>

  <p>
    <%= f.submit%>
  </p>
<%end%>

<%= link_to 'Retrun to Articles', articles_path%>